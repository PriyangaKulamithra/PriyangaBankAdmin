@model PriyangaBankAdmin.Controllers.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h1 class="display-4">Välkommen!</h1>
        </div>


        <div class="row justify-content-center text-uppercase">
            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Antal kunder</h4>
                        <p class="card-text">@Model.TotalCustomers</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Antal konton</h4>
                        <p class="card-text">@Model.TotalAccounts</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Totalt belopp</h4>
                        <p class="card-text">@Model.TotalBalance.ToString("N") SEK</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
