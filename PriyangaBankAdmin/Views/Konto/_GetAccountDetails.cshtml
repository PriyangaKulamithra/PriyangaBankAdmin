@model PriyangaBankAdmin.ViewModels.Home.Konto.KontoGetAccountDetailsViewModel
@{
    Layout = null;
}



@if (Model.Transactions.Count() == 0)
{
    <div class="card" style="width: 20rem;">
        <div class="card-body">
            <p class="card-text">Kontonumret matchar inte ett befintligt konto.</p>
        </div>
    </div>
}
else
{
    <div class="card p-3">
        <div class="card-body">
            <h3 class="card-title mb-2 ml-2 text-muted">Kontonummer: @Model.AccountId <span class="ml-5">Belopp: @Model.Balance.ToString("N") SEK</span></h3>
            <a asp-controller="Kundregister" asp-action="Kundbild" asp-route-id="">Visa Kundbild</a>

            <table class="table" id="transactionsTable">
                <thead>
                    <tr>
                        <th scope="col">Transaktion</th>
                        <th scope="col">Transaktionsdatum</th>
                        <th scope="col">Belopp</th>
                        <th scope="col">Saldo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Transactions)
                    {
                        <partial name="_transactionRow" model="item" />
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <nav aria-label="...">
                                <ul class="pagination justify-content-end flex-wrap">
                                    <li class="page-item">
                                        <button class="page-link text-primary"
                                                onclick="Fetch20(@Model.AccountId); return false;">
                                            Hämta 20 till
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
}

